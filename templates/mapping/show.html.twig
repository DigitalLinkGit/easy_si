{% extends 'base.html.twig' %}

{% block title %}Mapping{% endblock %}

{% block body %}
    <h1>Mapping</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mapping.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ mapping.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ mapping.description }}</td>
            </tr>
            <tr>
                <th>SourceKeyColumn</th>
                <td>{{ mapping.sourceKeyColumn }}</td>
            </tr>
            <tr>
                <th>TargetKeyColumn</th>
                <td>{{ mapping.targetKeyColumn }}</td>
            </tr>
            <tr>
                <th>Mappings</th>
                <td>{{ mapping.mappings ? mapping.mappings|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_mapping_index') }}">back to list</a>

