{% extends 'base.html.twig' %}

{% block title %}Rôles{% endblock %}

{% block body %}
<div class="container my-4">
    <div class="section-title d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Rôles :</h2>
        <a href="{{ path('app_role_new') }}" class="btn btn-outline-primary" title="Ajouter un rôle">
            <i class="bi bi-plus"></i>
            Ajouter un rôle
        </a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Description</th>
                <th>Interne</th>
                <th class="text-end"></th>
            </tr>
        </thead>
        <tbody>
            {% for role in roles %}
                <tr>
                    <td>{{ role.name }}</td>
                    <td>{{ role.description }}</td>
                    <td>{{ role.internal }}</td>
                    <td class="text-end">
                        <div class="d-flex justify-content-end gap-1">
                            <a href="{{ path('app_role_show', {'id': role.id}) }}" class="btn btn-sm btn-outline-primary btn-icon" title="Aperçu">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a href="{{ path('app_role_edit', {'id': role.id}) }}" class="btn btn-sm btn-outline-primary btn-icon" title="Modifier">
                                <i class="bi bi-pencil"></i>
                            </a>
                            {{ include('global/role/_delete_form.html.twig', { 'role': role }) }}
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center text-soft">Aucun rôle défini pour le moment.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
