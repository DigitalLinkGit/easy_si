{% extends 'base.html.twig' %}

{% block title %}Rôles{% endblock %}

{% block body %}
	{% include 'global/partials/_page_header.html.twig' with {
    title: 'Rôles :'
    } %}

	
	{% include 'global/components/table/_table.html.twig' with {
    items: roles,
    columns: ['name', 'description'],
    headers: ['Nom', 'Description'],
    filter: true,
    sort: true,
    actions: {
        show:  {
            route: 'app_role_show',
            param_map: { id: 'id' }
        },
        edit:  {
            route: 'app_role_edit',
            param_map: { id: 'id' }
        },
        delete: {
            route: 'app_role_delete',
            param_map: { id: 'id' }
        },
        add: {route: 'app_role_new'}
    }
} %}
{% endblock %}
