{{ form_start(form) }}

<div class="row mb-3">
	<div class="col-md-8">
		{{ form_row(form.name, {
      label: 'Nom',
      label_attr: { class: 'form-label fw-semibold small' },
      attr: { class: 'form-control form-control-sm' }
    }) }}

		{{ form_row(form.description, {
      label: 'Description',
      label_attr: { class: 'form-label fw-semibold small' },
      attr: { class: 'form-control', rows: 4 }
    }) }}
	</div>


	<div class="border rounded p-3 mt-4 col-md-4">
		<h5 class="mb-3">Rôles nécessaires</h5>
		<ul class="list-group list-group-sm">
			{% for role in capture.allRolesFromElements %}
				<li class="list-group-item">{{ role.name }}</li>
			{% else %}
				<li class="list-group-item text-muted">Aucun rôle identifié</li>
			{% endfor %}
		</ul>
	</div>
</div>


{{ include('components/button/_btn_save.html.twig') }}
{{ form_end(form) }}
