{% extends 'base.html.twig' %}

{% block title %}Captures
{% endblock %}

{% block body %}
<div class="container my-4">
	{% include 'global/partials/_page_header.html.twig' with {
    title: 'Captures :'
    } %}

    {% include 'global/components/table/_table.html.twig' with {
    items: captures,
    columns: ['name', 'description'],
    headers: ['Nom', 'Description'],
    filter: true,
    sort: true,
    actions: {
        show:  {
            route: 'app_capture_show',
            param_map: { id: 'id' }
        },
        edit:  {
            route: 'app_capture_edit',
            param_map: { id: 'id' }
        },
        delete: {
            route: 'app_capture_delete',
            param_map: { id: 'id' }
        },
        add: {route: 'app_capture_new'}
    }
} %}
</div>
{% endblock %}
