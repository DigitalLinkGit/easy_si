{% extends 'base.html.twig' %}

{% block title %}Capture index{% endblock %}

{% block body %}
    <h1>Capture index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for capture in captures %}
            <tr>
                <td>{{ capture.id }}</td>
                <td>{{ capture.name }}</td>
                <td>{{ capture.description }}</td>
                <td>
                    <a href="{{ path('app_capture_show', {'id': capture.id}) }}">show</a>
                    <a href="{{ path('app_capture_edit', {'id': capture.id}) }}">edit</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_capture_new') }}">Create new</a>
{% endblock %}
