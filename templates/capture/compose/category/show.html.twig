{% extends 'base.html.twig' %}

{% block title %}Détail de la catégorie{% endblock %}

{% block body %}
<div class="container my-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Catégorie : {{ category.name }}</h2>
        <a href="{{ path('app_category_index') }}" class="btn btn-outline-primary btn-sm">Retour</a>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            {{ form_start(form) }}
                <fieldset disabled>
                    {{ form_row(form.name) }}
                </fieldset>
            {{ form_end(form) }}
        </div>
    </div>

    <h4 class="mb-3">Questions associées</h4>

    {% if category.questions is not empty %}
        <ul class="list-group">
            {% for question in category.questions %}
                <li class="list-group-item">
                    <strong>{{ question.name }}</strong> : {{ question.content }}
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p class="text-muted">Aucune question associée.</p>
    {% endif %}

</div>
{% endblock %}
