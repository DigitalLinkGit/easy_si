{# --- BOUTON + MODALE POUR AJOUTER UN SERVICE ENTRANT --- #}
<div class="mb-3">
  <label class="form-label">Service entrant</label>
  <div class="d-flex gap-2 align-items-start">
    <div class="flex-grow-1">
      {{ form_row(form.serviceIn) }}
    </div>
    <button type="button" class="btn btn-outline-primary btn-sm mt-1" data-bs-toggle="modal" data-bs-target="#addServiceInModal">
      <i class="bi bi-plus-circle"></i> Nouveau
    </button>
  </div>
</div>

<div class="modal fade" id="addServiceInModal" tabindex="-1" aria-labelledby="addServiceInModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addServiceInModalLabel">Nouveau service entrant</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form method="post" action="{{ path('app_interaction_add_service', { element: form.vars.value.elementIn.id }) }}">
          {{ form_start(serviceInForm) }}
            {{ form_widget(serviceInForm) }}
            <div class="text-end">
              <button type="submit" class="btn btn-primary">Créer</button>
            </div>
          {{ form_end(serviceInForm) }}
        </form>
      </div>
    </div>
  </div>
</div>

